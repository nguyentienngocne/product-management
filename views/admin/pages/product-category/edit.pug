extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  h1(class="mb4") Chỉnh sửa sản phẩm 
  +alertError("5000")
  +alertSuccess("5000")
  form(
    action=`${prefixAdmin}/products-category/edit/${record.id}?_method=PATCH`
    id="form-edit-product"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      lable(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=record.title
      )
    div(class="form-group")
      lable(for="parent_id") Danh mục cha
      select(
        name="parent_id"
        id="parent_id"
        class="form-control"   
      )
        option(value=record.parent_id) -- Chọn danh mục cha --
        if(records)
          each item in records 
            option(value=item.id) #{item.title}
    div(class="form-group")
      lable(for="desc") Mô tả
      textarea(
        class="form-control textarea-mce"
        id="desc"
        name="description"
        rows="5"
        value=record.description 
      ) #{record.description}
    div(
      class="form-group"
      upload-image
    )
      lable(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=record.thumbnail
        alt="preview Image"
        upload-image-preview
        class="image-preview"
       )
      button(class="close-button") x
    div(class="form-group")
      lable(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value=record.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(record.status == "active" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="inactive"
        checked=(record.status == "inactive" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật

  script(src="/admin/js/product-category.js") 